<script>
// â”€â”€ Cuenta atrÃ¡s â”€â”€
function updateCountdown() {
  const target = new Date('2027-07-17T18:30:00');
  const now = new Date();
  const diff = target - now;
  if (diff <= 0) {
    document.getElementById('cd-days').textContent = '0';
    document.getElementById('cd-hours').textContent = '0';
    document.getElementById('cd-mins').textContent = '0';
    document.getElementById('cd-secs').textContent = '0';
    return;
  }
  const d = Math.floor(diff / 86400000);
  const h = Math.floor((diff % 86400000) / 3600000);
  const m = Math.floor((diff % 3600000) / 60000);
  const s = Math.floor((diff % 60000) / 1000);
  document.getElementById('cd-days').textContent = String(d).padStart(2,'0');
  document.getElementById('cd-hours').textContent = String(h).padStart(2,'0');
  document.getElementById('cd-mins').textContent = String(m).padStart(2,'0');
  document.getElementById('cd-secs').textContent = String(s).padStart(2,'0');
}
updateCountdown();
setInterval(updateCountdown, 1000);

// â”€â”€ Scroll reveal â”€â”€
const reveals = document.querySelectorAll('.reveal, .timeline-item');
const observer = new IntersectionObserver((entries) => {
  entries.forEach(e => {
    if (e.isIntersecting) { e.target.classList.add('visible'); observer.unobserve(e.target); }
  });
}, { threshold: 0.15 });
reveals.forEach(r => observer.observe(r));

// â”€â”€ Mapa tabs â”€â”€
function switchMap(id, btn) {
  document.querySelectorAll('.map-frame').forEach(f => f.classList.remove('active'));
  document.querySelectorAll('.map-tab').forEach(t => t.classList.remove('active'));
  document.getElementById('map-' + id).classList.add('active');
  btn.classList.add('active');
}

// â”€â”€ Mostrar/ocultar niÃ±os â”€â”€
function toggleNinos(el) {
  const row = document.getElementById('ninos-row');
  if (el.value === 'SÃ­') row.classList.add('visible');
  else row.classList.remove('visible');
}

// â”€â”€ Mostrar/ocultar alergias â”€â”€
function toggleAlergias(el) {
  const row = document.getElementById('alergias-row');
  row.style.display = el.value === 'SÃ­' ? 'block' : 'none';
}

// â”€â”€ RSVP Submit â”€â”€
function submitRsvp(e) {
  e.preventDefault();
  const form = document.getElementById('rsvp-form');
  const success = document.getElementById('rsvp-success');
  form.style.display = 'none';
  success.classList.add('show');
  success.scrollIntoView({ behavior: 'smooth', block: 'center' });
}
</script>
</body>
</html>
